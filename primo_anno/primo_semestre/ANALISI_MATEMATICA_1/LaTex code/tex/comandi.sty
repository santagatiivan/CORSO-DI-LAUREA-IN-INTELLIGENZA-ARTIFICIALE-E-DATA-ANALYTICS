\ProvidesPackage{comandi}[2024/09/06 Custom commands for TOC and lists]

% Modifica il nome dell'indice
\renewcommand\tableofcontents{%
    \section*{Indice}%
    \@mkboth{Indice}{Indice}%
    \@starttoc{toc}%
    \clearpage
    \if@restonecol\twocolumn\fi
}

% Comando per includere TOC e eventuali elenchi
\def\indici{%
    \if@twocolumn\onecolumn\fi
    \tableofcontents
    \iftablespage
        \addvspace{10pt}
        \let\saveaddvspace=\addvspace
        \def\addvspace##1{}
        \listoftables
        \let\addvspace=\saveaddvspace
    \fi
    \if@twocolumn\twocolumn\fi
}
